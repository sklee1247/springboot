<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "/Dev/workspaces/springboot/src/main/resources/mybatis/mybatis-3-mapper.dtd">

<mapper namespace="user.UserMapper">

	<select id="findUser" resultType="com.example.springboot.user.dto.Users">
        SELECT * FROM USERS WHERE user_id = #{userId};
    </select>

	<insert id="save" parameterType="com.example.springboot.user.dto.Users">
        INSERT INTO USERS (user_id, password, authority, createdAt)
        VALUES (#{param.user_id}, #{param.password}, #{param.authority}, now());
    </insert>
    
</mapper>